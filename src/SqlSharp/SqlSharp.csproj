<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Description>Combines the power of raw SQL with the convenience of an ORM</Description>
		<PackageId>SqlSharp</PackageId>
		<Version Condition="'$(SqlSharp_PACKAGE_VERSION)' != ''">$(SqlSharp_PACKAGE_VERSION)</Version>
		<Version Condition="'$(SqlSharp_PACKAGE_VERSION)' == ''">1.0.0-local</Version>
		<Authors>zpxp</Authors>
		<Company>zpxp</Company>
		<RootNamespace>SqlSharp</RootNamespace>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<IncludeSource>True</IncludeSource>
		<IncludeSymbols>True</IncludeSymbols>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<PackageTags>ORM;sql;lean</PackageTags>
		<RepositoryUrl>https://github.com/zpxp/sqlsharp</RepositoryUrl>
		<PublishRepositoryUrl>True</PublishRepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging" Version="3.1.0" />
		<PackageReference Include="System.Data.Common" Version="4.3.0" />
		<PackageReference Include="System.Linq.Async" Version="4.1.1" />
		<PackageReference Include="System.Threading.Channels" Version="4.7.1" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\LICENSE" Pack="true" PackagePath="LICENSE"/>
	</ItemGroup>

</Project>
